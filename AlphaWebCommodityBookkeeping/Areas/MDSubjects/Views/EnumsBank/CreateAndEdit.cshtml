@model BusinessObjects.MDSubjects.cMDSubjects_Enums_Bank

@{
    ViewBag.Title = "CreateAndEdit";
}

   
   

<script type="text/javascript">

    $.validator.setDefaults({
        submitHandler: function () {
            myForm.submit();
            //alert("OK");
        }
    });

    $(document).ready(function () {
        // validate signup form on keyup and submit
        $("#myForm").validate({
            rules: {
                Name: "required",
                Number: "required"
            },
            messages: {
                Name: "Molimo unesite naziv banke!",
                Number: "Molimo unesite broj računa!"

            }
        });
    });
</script>

@{
    string caption = "Nova banka";
    if (Model.Name != "")
    {
        caption = "Banka: " + Model.Name;
    }
}

@using (Html.BeginForm("CreateAndEdit", "EnumsBank", FormMethod.Post, new { id = "myForm" }))
{
     @Html.HiddenFor(model => model.EntityKeyData)
   @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Inactive)


    
   @Html.Hidden("linkName", "SifrarniciParent")
   @Html.Hidden("linkId", "")
           
    
    <div id='large-badges'></div><div id='ValSum' style="display:none" class='notifyBox bad'>Please fix these errors. </div>


    
    
<div class="clearb"></div>
<div class="clearb"></div>

	 <h2 class="pt"><div class="span-33"> @caption </div></h2>
    
     
	
	<div class="clearb"></div>
	<div class="title-rule"></div>

	<table width="100%" cellspacing="0" cellpadding="0" class="newTable">
	<tr><td colspan='5'></td></tr>
	</table>
         <div class="span-23" style="position: relative;">
                  
                <div class="span-6 required form-layout-left">
			        <label for="customerid" class="no-pointer">Naziv banke:</label>
		        </div>
                <div class="span-16 form-layout-right">
                @Html.DevExpress().TextBox(settings => { settings.Name = "Name"; settings.Height = 24; settings.Width = 200; settings.ShowModelErrors = false; settings.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithText; settings.Properties.ValidationSettings.ErrorTextPosition = ErrorTextPosition.Bottom; settings.Properties.ValidationSettings.SetFocusOnError = true; settings.Properties.ValidationSettings.ValidateOnLeave = true; }).Bind(Model.Name).GetHtml()
                </div>
 
             </div>   

         <div class="span-23" style="position: relative;">
                  
                <div class="span-6 required form-layout-left">
			        <label for="customerid" class="no-pointer">Broj računa:</label>
		        </div>
                <div class="span-16 form-layout-right">
                @Html.DevExpress().SpinEdit(settings => { settings.Name = "aNumber"; settings.Height = 24; settings.Width = 200; settings.ShowModelErrors = false; settings.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithText; settings.Properties.ValidationSettings.ErrorTextPosition = ErrorTextPosition.Bottom; settings.Properties.ValidationSettings.SetFocusOnError = true; settings.Properties.ValidationSettings.ValidateOnLeave = true; }).Bind(Model.Number).GetHtml()
                </div>
 
             </div>   
    
    
            <div class="span-23" style="position: relative;">
                  
                <div class="span-6  form-layout-left">
			        <label for="customerid" class="no-pointer">Mjesto:</label>
		        </div>
                <div class="span-16 form-layout-right">
                @Html.Partial("MjestaComboPartial", Model.HomeAddress_PlaceId, new ViewDataDictionary() { { "cmbMjestaName", "HomeAddress_PlaceId" }, { "controllerName", "EnumsBank" }, { "height", 20 }, { "width", 200 } })
                </div>
 
             </div>   
             
                  <div class="span-23" style="position: relative;">
                  
                <div class="span-6  form-layout-left">
			        <label for="customerid" class="no-pointer">Adresa:</label>
		        </div>
                <div class="span-16 form-layout-right">
                @Html.DevExpress().TextBox(settings => { settings.Name = "HomeAddress"; settings.Height = 24; settings.Width = 200; settings.ShowModelErrors = false; settings.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithText; settings.Properties.ValidationSettings.ErrorTextPosition = ErrorTextPosition.Bottom; settings.Properties.ValidationSettings.SetFocusOnError = true; settings.Properties.ValidationSettings.ValidateOnLeave = true; }).Bind(Model.HomeAddress).GetHtml()
                </div>
 
             </div>   
    
    
                 <div class="span-23" style="position: relative;">
                  
                <div class="span-6  form-layout-left">
			        <label for="customerid" class="no-pointer">Broj drzave:</label>
		        </div>
                <div class="span-16 form-layout-right">
                @Html.DevExpress().SpinEdit(settings => { settings.Name = "HomeAddress_CountryNumber"; settings.Height = 24; settings.Width = 200; settings.ShowModelErrors = false; settings.Properties.ValidationSettings.ErrorDisplayMode = ErrorDisplayMode.ImageWithText; settings.Properties.ValidationSettings.ErrorTextPosition = ErrorTextPosition.Bottom; settings.Properties.ValidationSettings.SetFocusOnError = true; settings.Properties.ValidationSettings.ValidateOnLeave = true; }).Bind(Model.HomeAddress_CountryNumber).GetHtml()
                </div>
 
             </div>   
    
    
    
    
     <div class="clearb" style="padding-top:20px"></div>
    
 
  <div class="clearb"></div>
            
    
    
   
<div class="clearb"></div>

    <div class="span-40 append-1">
        <div class="span-10 append-1"></div>
        <div class="span-10 append-1">
                <a href="#" class="button_large launch-invitepop-invoice " onclick="$(this).closest('form').submit()">
                <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Snimi&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span></a>
        </div>
        <div class="span-2 append-1"></div>
        <div class="span-10 append-1">
                <a href="@Url.Content("~/MDSubjects/EnumsBank/Odustani")" class="button_large2 launch-invitepop-invoice ">
                <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Odustani&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span></a>
        </div>
        <div class="span-8 append-1"></div>
    </div>
 
}
