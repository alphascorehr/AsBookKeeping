                {
                    column.FieldName = "Label";
                    column.Caption = "Šifra";
                    column.ColumnType = MVCxGridViewColumnType.TextBox;
                    column.Width = 80;

                });
                
                settings.HtmlRowCreated = (sender, e) =>
                {
                    if (e.RowType == DevExpress.Web.ASPxGridView.GridViewRowType.Data)
